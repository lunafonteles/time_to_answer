<h1>Administradores</h1>
<div class="table-responsive">
    <table class="table table-striped table-borded table-hover" >
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
                <tr>
                    <td><%= admin.id %></td>
                    <td><%= admin.email %></td>
                    <td style="100px">
                        <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary" do %>
                            <i class="fa fa-edit"></i>
                        <% end %>
                        <%= link_to destroy_admin_session_path(admin), class: "btn btn-danger", method: :delete, data: {confim: 'Tem certeza?' } do %>
                            <i class="fa fa-minus"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

